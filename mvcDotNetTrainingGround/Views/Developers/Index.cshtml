@using mvcDotNetTrainingGround.Models
@model List<Developer>

<h1>Showing @Model.Count developers!</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <a asp-controller="Developers" asp-action="Create"> Create new developer </a>
    </tr>
  </thead>
 @for(var i=0; i < Model.Count;i++)
    {
    var developer = Model[i];
    var style="";
    if(i % 2 == 0) {
        style="background-color: lightgray;";
    }
    <tr style="@style">
        <td>@developer.Name</td>
        <td>@developer.Email</td>
        <td>
            <a
                
                asp-controller="Developers"
                asp-action="Details"
                asp-route-id="@developer.Id"
            >
                Details
            </a>
        </td>
    </tr>
    }
</ul>
</table>