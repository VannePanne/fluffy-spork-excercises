@model List<Adress>

<h1>Showing @Model.Count adresses!</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>Email</th>
    </tr>
  </thead>
  @for (var i = 0; i < Model.Count; i++)
  {
    var adress = Model[i];
    var style = "";
    if (i % 2 == 0) {
        style = "background-color: darkseagreen;";
    }
    <tr style="@style">
      <td>
        <a 
            asp-controller="AdressBook"
            asp-action="Details"
            asp-route-id="@adress.Id"
        >
            @adress.Name
        </a>
      </td>
      <td>@adress.Street</td>
      <td>@adress.City</td>
      <td>@adress.Email</td>
    </tr>
  }
</ul>
</table>